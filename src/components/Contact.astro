---
import { profile as defaultProfile } from "../data/profile";
import { socialLinks as defaultSocials } from "../data/socials";
import { getProfile, isContentfulConfigured } from "../utils/contentful";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const locale = lang === "id" ? "id-ID" : "en-US";

let profileData = {
  email: defaultProfile.email,
  location: defaultProfile.location,
};

let socialLinks = defaultSocials;

try {
  if (isContentfulConfigured()) {
    const contentfulProfile = await getProfile(false, locale);
    if (contentfulProfile) {
      profileData = {
        email: contentfulProfile.fields.email || defaultProfile.email,
        location: contentfulProfile.fields.location || defaultProfile.location,
      };

      if (contentfulProfile.fields.socialLinks) {
        const links = contentfulProfile.fields.socialLinks;
        // Map available keys to socialLinks structure
        const mappedSocials = [];
        const platformMap: Record<string, string> = {
          threads: "Threads",
          linkedin: "LinkedIn",
          instagram: "Instagram",
          github: "GitHub",
          email: "Email",
          twitter: "Twitter",
        };

        for (const [key, url] of Object.entries(links)) {
          if (platformMap[key]) {
            mappedSocials.push({
              platform: platformMap[key],
              url: url as string,
              icon: key,
              username: "", // username not strictly needed for UI as designed
            });
          }
        }

        if (mappedSocials.length > 0) {
          socialLinks = mappedSocials;
        }
      }
    }
  }
} catch (error) {
  console.warn("Error fetching profile in Contact:", error);
}
---

<section id="contact" class="section-padding relative bg-dark-surface">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <p class="text-accent font-mono text-sm mb-4">// {t("contact.title")}</p>
      <h2 class="text-display text-4xl md:text-5xl lg:text-6xl mb-4">
        {t("contact.subtitle")}
      </h2>
      <p class="text-muted max-w-2xl mx-auto">
        {t("contact.description")}
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <!-- Contact Form -->
      <div class="card-elevated p-8">
        <form id="contact-form" class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-muted mb-2">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-xl bg-dark-surface border border-dark-border
                     text-white placeholder-white/30 focus-ring
                     transition-colors"
              placeholder="Your name"
            />
            <p id="name-error" class="mt-1 text-sm text-red-500 hidden"></p>
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-muted mb-2"
            >
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-xl bg-dark-surface border border-dark-border
                     text-white placeholder-white/30 focus-ring
                     transition-colors"
              placeholder="your@email.com"
            />
            <p id="email-error" class="mt-1 text-sm text-red-500 hidden"></p>
          </div>

          <!-- Message -->
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-muted mb-2"
            >
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 rounded-xl bg-dark-surface border border-dark-border
                     text-white placeholder-white/30 resize-none focus-ring
                     transition-colors"
              placeholder="Your message..."></textarea>
            <p id="message-error" class="mt-1 text-sm text-red-500 hidden"></p>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="btn-primary w-full focus-ring
                   disabled:opacity-50 disabled:cursor-not-allowed
                   flex items-center justify-center gap-2"
            data-cursor-hover
          >
            <span>Send Message</span>
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </button>
        </form>

        <!-- Success Message -->
        <div id="success-message" class="hidden text-center py-8">
          <div
            class="w-16 h-16 mx-auto mb-4 rounded-full bg-secondary/20 flex items-center justify-center"
          >
            <svg
              class="w-8 h-8 text-secondary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Message Sent!</h3>
          <p class="text-muted">
            Thank you for reaching out. I'll get back to you soon.
          </p>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8">
        <!-- Email -->
        <div class="flex items-start gap-4">
          <div
            class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0"
          >
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
