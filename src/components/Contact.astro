          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Clear previous errors
    document.querySelectorAll('[id$="-error"]').forEach((el) => {
      el.classList.add("hidden");
      el.textContent = "";
    });

    const formData = new FormData(form);
    const name = formData.get("name") as string;
    const message = formData.get("message") as string;

    let hasError = false;

    // Validate name
    if (!name || name.trim().length === 0) {
      showError("name", "Name is required");
      hasError = true;
    }

    // Validate message
    if (!message || message.trim().length < 10) {
      showError("message", "Message must be at least 10 characters");
      hasError = true;
    }

    if (hasError) return;

    // Create mailto link
    // Target: aldhoproject@gmail.com
    const emailTo = "aldhoproject@gmail.com";
    const subject = `Portfolio Contact: ${name}`;
    const body = `Name: ${name}\n\nMessage:\n${message}`;

    const mailtoLink = `mailto:${emailTo}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

    // Open mail client
    window.location.href = mailtoLink;

    // Optional: Reset form
    form.reset();
  });

  function showError(field: string, message: string) {
    const errorEl = document.getElementById(`${field}-error`);
    if (errorEl) {
      errorEl.textContent = message;
      errorEl.classList.remove("hidden");
    }
  }
</script>

<style>
  :global(body.light) #contact {
    background-color: var(--color-light-surface);
  }

  :global(body.light) #contact h2,
  :global(body.light) #contact h3 {
    color: var(--color-dark-bg);
  }

  :global(body.light) #contact .bg-dark-bg {
    background-color: var(--color-light-bg);
  }

  :global(body.light) #contact .bg-dark-surface {
    background-color: var(--color-light-surface);
  }

  :global(body.light) #contact input,
  :global(body.light) #contact textarea {
    background-color: var(--color-light-surface);
    border-color: var(--color-light-border);
    color: var(--color-dark-bg);
  }

  /* Light mode primary text - darker for contrast */
  :global(body.light) #contact .text-primary {
    color: #c62d00 !important;
  }

  :global(body.light) #contact .text-accent {
    color: #6d5e00 !important; /* WCAG AA compliant (5.5:1 on white) */
  }
</style>
