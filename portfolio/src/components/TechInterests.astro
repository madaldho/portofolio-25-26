---
import { techInterests } from '../data/interests';

// Duplicate interests to create seamless loop
const duplicatedInterests = [...techInterests, ...techInterests];
---

<section id="interests" class="section-padding relative bg-dark-surface overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <p class="text-secondary font-mono text-sm mb-4">// Technical Expertise</p>
      <h2 class="text-display text-4xl md:text-5xl lg:text-6xl mb-4">
        Tech <span class="gradient-text-accent">Stack</span>
      </h2>
    </div>

    <!-- Marquee Container -->
    <div class="marquee-container relative w-full overflow-hidden mask-gradient py-8">
      <div class="marquee-content flex gap-8 animate-scroll hover:pause">
        {duplicatedInterests.map((interest) => (
          <div
            class="shrink-0 w-72 card-elevated p-6 group cursor-default"
            style={`--interest-color: ${interest.color}`}
          >
            <!-- Icon -->
            <div
              class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 transition-transform duration-300 group-hover:scale-110"
              style={`background: ${interest.color}15`}
            >
              <span class="text-2xl">
                {interest.icon === 'globe' ? 'ğŸŒ' : 
                 interest.icon === 'palette' ? 'ğŸ¨' : 
                 interest.icon === 'trending' ? 'ğŸ“ˆ' : 
                 interest.icon === 'camera' ? 'ğŸ“¸' : 
                 interest.icon === 'star' ? 'â­' : 'ğŸ’¡'}
              </span>
            </div>

            <!-- Content -->
            <h3 class="text-lg font-semibold mb-2 group-hover:text-white transition-colors" style={`color: ${interest.color}`}>
              {interest.name}
            </h3>
            <p class="text-muted text-sm line-clamp-2">
              {interest.description}
            </p>

            <!-- Learning Tags -->
            {interest.currentlyLearning && interest.currentlyLearning.length > 0 && (
              <div class="mt-4 pt-3 border-t border-dark-border flex flex-wrap gap-2">
                {interest.currentlyLearning.slice(0, 3).map((item) => (
                  <span
                    class="px-2 py-0.5 text-[10px] rounded-md"
                    style={`background: ${interest.color}10; color: ${interest.color}`}
                  >
                    {item}
                  </span>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .mask-gradient {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .animate-scroll {
    animation: scroll 60s linear infinite;
    width: max-content;
  }

  .marquee-content:hover {
    animation-play-state: paused;
  }

  :global(body.light) #interests {
    background-color: var(--color-light-surface);
  }
  
  :global(body.light) #interests h2 {
    color: var(--color-dark-bg);
  }
</style>
